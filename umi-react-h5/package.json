{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "@reduxjs/toolkit": "^2.2.8",
    "antd-mobile": "^5.37.1",
    "axios": "^1.7.7",
    "lib-flexible": "^0.3.2",
    "pinia": "^2.2.4",
    "px2rem-loader": "^0.1.9",
    "react": "17.x",
    "react-dom": "17.x",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "umi": "^3.5.43"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/preset-react": "^2.1.7",
    "@umijs/test": "^3.5.43",
    "lint-staged": "^10.0.7",
    "postcss-px2rem": "^0.3.0",
    "postcss-pxtorem": "^5.1.1",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
